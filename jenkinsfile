    agent any

    stages {
        stage('Checkout') {

            steps {
                git credentialsId: 'ABCDE',
                url: 'http://localhost/threepoints/docker-vulnerable-dvwa.git'
            }
        }

        stage('Prueba Paralela') {
            parallel {
                stage('Pruebas de SAST') {
                    steps {
                        sh 'echo "Ejecuci√≥n de pruebas de SAST"'
                    }
                }
                stage('Imprimir Env') {
                    steps {
                        sh 'echo "WORKSPACE path: ${WORKSPACE}"'
                    }
                }
            }
        }
    }
}
